{
	"name": "compliance_criterial",
	"revision": 2,
	"project": "key",
	"mode": "decision",
	"rules":
	[
		{
			"name": "compliance",
			"conditions":
			[
				{
					"eval": "filecontents.hits.hits.*._source.compliant",
					"op": "=",
					"value": "true",
					"report_type": "attributes",
					"report_attributes":
					[
						 "filecontents.hits.hits.*._source.description",
						 "filecontents.hits.hits.*._source.reason"
					]
				},
				{
					"eval": "filecontents.compliance.timed_out",
					"op": "=",
					"value": false,
					"report_type": "attributes",
					"report_attributes":
					[
						 "filecontents.hits.hits.*._source.description",
						 "filecontents.hits.hits.*._source.reason"
					]
				}
			]
		},
		{
			"name": "vulnerability",
			"conditions":
			[
				{
					"eval": "filecontents.hits.hits.*._source.vulnerable",
					"op": "=",
					"value": false,
					"report_type": "attributes",
					"report_attributes":
					[
						 "filecontents.hits.hits.*._source.namespace"
					]
				},
				{
					"eval": "filecontents.vulnerability.timed_out",
					"op": "=",
					"value": false,
					"report_type": "attributes",
					"report_attributes":
					[
						 "filecontents.hits.hits.*._source.namespace"
					]					
				}

			]
		}
	]
}